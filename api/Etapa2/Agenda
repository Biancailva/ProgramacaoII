import java.util.*;

public class Agenda {
     public static Map<String, List<String>> agenda = new HashMap<>();
    public static void main(String[] args) {
       
        Scanner input = new Scanner(System.in);

        int opcao;
        do {
            System.out.println("Menu:");
            System.out.println("1) Criar/editar/remover evento");
            System.out.println("2) Remover evento");
            System.out.println("3) Listar eventos de uma data");
            System.out.println("4) Pesquisar eventos por palavra-chave no título");
            System.out.println("5) Mostrar todos os eventos");
            System.out.println("6) Sair");
            System.out.print("Escolha uma opção: ");
            opcao = input.nextInt();
            input.nextLine(); // Consumir a nova linha

            switch (opcao) {
                case 1:
                    gerenciarEvento(input);
                    break;
                case 2:
                    removerEvento(input);
                    break;
                case 3:
                    listarEventosPorData(input);
                    break;
                case 4:
                    pesquisarEventosPorPalavraChave(input);
                    break;
                case 5:
                    mostrarTodososEventos(input);
                    break;
                case 6:
                    System.out.println("Saindo...");
                    break;
                default:
                    System.out.println("Opção inválida. Tente novamente.");
            }
        } while (opcao != 4);


    }
    public static void gerenciarEvento(Scanner input) {
        System.out.print("Digite a data do evento (YYYY-MM-DD): ");
        String data = input.nextLine();
        System.out.print("Digite o horário do evento (HH:MM): ");
        String horario = input.nextLine();
        System.out.print("Digite o título do evento: ");
        String titulo = input.nextLine();

        List<String> eventos = agenda.getOrDefault(data, new ArrayList<>());
        String eventoCompleto = horario + " - " + titulo;

        if (eventos.contains(eventoCompleto)) {
            System.out.println("Conflito: Já existe um evento nesse horário.");
        } else {
            eventos.add(eventoCompleto);
            Collections.sort(eventos);
            agenda.put(data, eventos);
            System.out.println("Evento adicionado com sucesso.");
        }
    }

    public static void removerEvento(Scanner input){
        System.out.print("Digite a data do evento a ser removido (YYYY-MM-DD): ");
        String data = input.nextLine();
        List<String> eventos = agenda.remove(data);
        if (eventos != null && !eventos.isEmpty()) {
            System.out.println("Evento removido com sucesso.");
        } else {
            System.out.println("Nenhum evento encontrado para essa data.");
        }

    }
    public static void listarEventosPorData(Scanner input) {
        System.out.print("Digite a data para listar eventos (YYYY-MM-DD): ");
        String data = input.nextLine();
        List<String> eventos = agenda.get(data);
        if (eventos != null && !eventos.isEmpty()) {
            System.out.println("Eventos em " + data + ":");
            for (String evento : eventos) {
                System.out.println(evento);
            }
        } else {
            System.out.println("Nenhum evento encontrado para essa data.");
        }
    }
    public static void pesquisarEventosPorPalavraChave(Scanner input) {
        System.out.print("Digite a palavra-chave para pesquisar eventos: ");
        String palavraChave = input.nextLine().toLowerCase();
        boolean encontrado = false;

        for (Map.Entry<String, List<String>> entry : agenda.entrySet()) {
            String data = entry.getKey();
            List<String> eventos = entry.getValue();
            for (String evento : eventos) {
                if (evento.toLowerCase().contains(palavraChave)) {
                    System.out.println("Evento encontrado em " + data + ": " + evento);
                    encontrado = true;
                }
            }
        }
        if (!encontrado) {
            System.out.println("Nenhum evento encontrado com a palavra-chave fornecida.");
        }
    }
   

}
